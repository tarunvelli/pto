%h1 OOO Settings
.row
  .col-md-6.col-md-offset-3
    = form_for(@ooo_config, url: admin_oooconfigs_path, method: :patch) do |f|
      = render 'shared/error_messages', object: f.object
      .form-group
        = f.label :leaves_count
        = f.number_field :leaves_count, class: 'form-control'
      .form-group
        = f.label :wfhs_count
        = f.number_field :wfhs_count, class: 'form-control'
      .form-group
        = f.label :wfh_headsup_hours
        = f.number_field :wfh_headsup_hours, :step => "0.5", class: 'form-control'
      .form-group
        = f.label :wfh_penalty_coefficient
        = f.number_field :wfh_penalty_coefficient, class: 'form-control'
      = f.submit "Submit", class: "btn btn-primary"

